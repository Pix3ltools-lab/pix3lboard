# App Info
NEXT_PUBLIC_APP_NAME=pix3lboard
NEXT_PUBLIC_APP_VERSION=2.2.9
NEXT_PUBLIC_APP_URL=https://pix3lboard.vercel.app

# Turso Database
# Get these from: turso db show <dbname> --url and turso db tokens create <dbname>
TURSO_DATABASE_URL="libsql://your-database.turso.io"
TURSO_AUTH_TOKEN="your-auth-token"

# Pix3lWiki URL (cross-app links)
NEXT_PUBLIC_PIX3LWIKI_URL=https://wiki.pix3ltools.com

# JWT Secret
# Generate a random string (min 32 characters) for signing JWT tokens
JWT_SECRET="your-random-secret-key-at-least-32-characters-long"
